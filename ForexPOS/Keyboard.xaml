<UserControl x:Class="ForexPOS.Keyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ForexPOS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid DockPanel.Dock="Left">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Button Grid.Row="0" Grid.Column="0" Content="7" FontSize="32" FontWeight="Bold"/>
		<Button Grid.Row="0" Grid.Column="1" Content="8" FontSize="32" FontWeight="Bold"/>
		<Button Grid.Row="0" Grid.Column="2" Content="9" FontSize="32" FontWeight="Bold"/>
		<Button Grid.Row="1" Grid.Column="0" Content="4" FontSize="32" FontWeight="Bold"/>
		<Button Grid.Row="1" Grid.Column="1" Content="5" FontSize="32" FontWeight="Bold"/>
		<Button Grid.Row="1" Grid.Column="2" Content="6" FontSize="32" FontWeight="Bold"/>
		<Button Grid.Row="2" Grid.Column="0" Content="1" FontSize="32" FontWeight="Bold"/>
		<Button Grid.Row="2" Grid.Column="1" Content="2" FontSize="32" FontWeight="Bold"/>
		<Button Grid.Row="2" Grid.Column="2" Content="3" FontSize="32" FontWeight="Bold"/>
		<Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="0" FontSize="32" FontWeight="Bold"/>
		<Button Grid.Row="3" Grid.Column="2" Content="." FontSize="32" FontWeight="Bold"/>

		<Button Grid.Row="0" Grid.Column="4" FontSize="32" FontWeight="Bold">
			<Button.Content>
				<StackPanel>
					<TextBlock Text="€" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
					<TextBlock Text="Euro" FontSize="12" HorizontalAlignment="Center"/>
				</StackPanel>
			</Button.Content>
		</Button>
		<Button Grid.Row="1" Grid.Column="4" FontSize="32" FontWeight="Bold">
			<Button.Content>
				<StackPanel>
					<TextBlock Text="$" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
					<TextBlock Text="US Dollar" FontSize="12" HorizontalAlignment="Center"/>
				</StackPanel>
			</Button.Content>
		</Button>
		<Button Grid.Row="2" Grid.Column="4" FontSize="32" FontWeight="Bold">
			<Button.Content>
				<StackPanel>
					<TextBlock Text="₣" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
					<TextBlock Text="Swiss Franc" FontSize="12" HorizontalAlignment="Center"/>
				</StackPanel>
			</Button.Content>
		</Button>
		<Button Grid.Row="4" Grid.Column="4" FontSize="32" FontWeight="Bold">
			<Button.Content>
				<StackPanel>
					<TextBlock Text="£" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
					<TextBlock Text="UK Pound" FontSize="12" HorizontalAlignment="Center"/>
				</StackPanel>
			</Button.Content>
		</Button>
	</Grid>
</UserControl>
