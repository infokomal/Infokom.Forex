<UserControl x:Class="ForexPOS.Controls.Currency"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:atomics="clr-namespace:ForexPOS.Atomics"
             xmlns:local="clr-namespace:ForexPOS.Controls"
		   xmlns:models="clr-namespace:ForexPOS.Models"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="64" DataContext="{Binding RelativeSource={RelativeSource Self}}" >

	<DockPanel DockPanel.Dock="Left" LastChildFill="True" Margin="5" >
		<TextBlock DockPanel.Dock="Bottom" Text="{Binding CurrencyCode}" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
		<Image Stretch="Uniform" Source="{Binding CurrencyFlag}"></Image>
	</DockPanel>
</UserControl>
